<div class="main">
  <div class="contents">
    <% @posts.each do |post|%>
      <div class="text">
        <%= post.text %>
      </div>
      <div class="image">
        <%= link_to image_tag(src = post.image.url, size: '250x250'), post_path(post.id) %>
      </div>
      <div class="user_link">
        <% if post.user_id == current_user.id %>
          <%= post.user.name %>
        <% else %>
          <%= link_to(post.user.name, user_path(post.user.id)) %>
        <% end %>
      </div>
      <div class="date">
        <%= post.created_at.strftime("%Y-%m-%d %H:%M")%>
      </div>
    <% end %>
  </div>
  <%= paginate @posts %>
</div>